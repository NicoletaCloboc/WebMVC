@model IEnumerable<Order>

@{
    ViewData["Title"] = "Orders";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Orders</title>
</head>
<body>
    <table cellpadding="10" cellspacing="0">
        <tr>
            <th>CustomerName</th>
            <th>CustomerEmail</th>
            <th>Quantity</th>
            <th>Size</th>
            <th>DateRequired</th>
            <th>Notes</th>
        </tr>
        @foreach (Order order in Model)
        {
            <tr>
                <td>@order.CustomerName</td>
                <td>@order.CustomerEmail</td>
                <td>@order.Quantity</td>
                <td>@order.Size</td>
                <td>@order.DateRequired.Date.ToShortDateString()</td>
                <td>@order.Notes</td>
            </tr>
        }
    </table>
</body>
</html>